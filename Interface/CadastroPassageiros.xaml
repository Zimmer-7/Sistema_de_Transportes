<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interface.CadastroPassageiro"
             Title="CadastroPassageiro">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="10">

            <Label Text="Nome"/>

            <Entry 
                x:Name="NomeEntry" 
                Placeholder="Nome do passageiro"
                />

            <Label Text="CPF"/>
            
            <Entry 
                x:Name="CpfEntry" 
                Placeholder="000.000.000-00"
                Keyboard="Numeric"
                />
            <Label Text="Telefone"/>

            <Entry 
                x:Name="TelefoneEntry" 
                Placeholder="Telefone do passageiro"
                Keyboard="Telephone"
                />

            <Button
                x:Name="CadastrarPassageiroBtn"
                Text="Cadastrar" 
                Clicked="OnCadastrarPassageiroBtnClicked"
                />

            <Label x:Name="resultado"
                   TextColor="Green"
                   FontAttributes="Bold"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
