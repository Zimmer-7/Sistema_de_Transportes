<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Interface.CadastroViagem"
             Title="CadastroViagem">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="10">

            <Label 
            Text="Cadastro viagem!!!
                NÃ£o sei como vai funcionar"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Label Text="Partida"/>

            <Entry 
                x:Name="PartidaEntry" 
                Placeholder="00/00/0000"
                />

            <Label Text="Valor"/>

            <Entry 
                x:Name="ValorEntry" 
                Placeholder="valor da viagem"
                />

            <Button
                x:Name="CadastrarViagemBtn"
                Text="Cadastrar" 
                Clicked="OnCadastrarViagemBtnClicked"
                />

            <Label x:Name="resultado"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>